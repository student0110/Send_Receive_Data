<Window x:Class="SendReceiveData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendReceiveData"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Send_Receive_Data" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        SizeToContent="Height"
        Closing="Window_Closing"
        AllowDrop="True"
        DragEnter="Window_DragEnter"
        Drop="Window_Drop"
        Width="320">
    <Window.Resources>
        <Style
            x:Key="MainStyle"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="18"/>
            <Setter
                Property="Padding" 
                Value="5"/>
            <Setter
                Property="Background"
                Value="LightGray"/>
            <Setter
                Property="Margin"
                Value="0,0,0,5"/>
        </Style>
        <Style
            TargetType="Button">
            <Setter
                Property="Height"
                Value="30"/>
            <Setter
                Property="Margin"
                Value="0,5"/>
            <Setter
                Property="Background"
                Value="#3F51B5"/>
            <Setter
                Property="Foreground"
                Value="WhiteSmoke"/>
            <Setter
                Property="FontSize"
                Value="18"/>
        </Style>
    </Window.Resources>
    <Border
        BorderBrush="#3F51B5"
        BorderThickness="2">
        <Grid
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Text="Local Ip"
                HorizontalAlignment="Center"/>
            <TextBlock
                Style="{StaticResource MainStyle}"
                Grid.Row="1"
                x:Name="ipNameTextBlock"
                MouseLeftButtonDown="TextBlock_Click"
                ToolTip="left click to copy text"/>
            <TextBlock
                Grid.Row="2"
                Text="The name of the received file"
                HorizontalAlignment="Center"/>
            <TextBlock
                Grid.Row="3"
                Foreground="Blue"
                x:Name="fileNameTextBlock"
                TextWrapping="Wrap"
                Style="{StaticResource MainStyle}"/>
            <TextBlock
                Grid.Row="4"
                Text="Enter the recipient's IP address"
                HorizontalAlignment="Center"/>
            <TextBox
                Grid.Row="5"
                x:Name="ipRecipient"
                Padding="5"
                Background="WhiteSmoke"
                Margin="0,0,0,5"/>
            <Button
                Grid.Row="6"
                x:Name="selectFileButton"
                Content="Select or Drag and Drop file to send"
                Click="SelectFileButton_Click"/>
            <ProgressBar
                Grid.Row="7"
                Height="5"
                x:Name="progressBar"/>
        </Grid>
    </Border>
</Window>
